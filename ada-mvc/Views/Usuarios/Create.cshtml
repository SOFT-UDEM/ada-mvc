            </div>
        </div>
    </div>
    <script>
        var pass = document.querySelector("#Password");
        function validatePassword() {
            var p = document.getElementById("Password").value;
            var errors = [];
            if (p.length < 8) {
                errors.push("Tu password debe tener al menos 8 caracteres");
            }
            if (p.search(/[A-Z]/) < 0) {
                errors.push("Tu password debe contener mayusculas");
            }
            if (p.search(/[a-z]/) < 0) {
                errors.push("Tu password debe contener minusculas");
            }
            if (p.search(/[0-9]/) < 0) {
                errors.push("Tu password debe contener al menos 1 digito");
            }
            if (errors.length > 0) {
                alert(errors.join("\n"));
                return false;
            }
            return true;
        }
        pass.addEventListener("change", () => {
            validatePassword();
        })
    </script>
