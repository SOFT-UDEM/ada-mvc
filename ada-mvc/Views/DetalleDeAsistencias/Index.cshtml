@model IEnumerable<ada_mvc.DetalleDeAsistencias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar detalle de asistencias de empleados</h2>
<style>
    .mybtn {
        border: 1px solid #F06D7E;
        margin-bottom: 1rem;
    }

        .mybtn > a {
            color: #F06D7E;
        }
</style>
<div class="btn mybtn">
    @Html.ActionLink("Crear nueva", "Create")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaHoraEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHoraSalida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asistencias.IdAsistencia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHoraEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHoraSalida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Asistencias.IdAsistencia)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdDetalle }) |
            @Html.ActionLink("Ver", "Details", new { id=item.IdDetalle }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdDetalle })
        </td>
    </tr>
}

</table>
