
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    .label-default {
        background-color: transparent;
    }
    .mybtn {
        border: 1px solid #F06D7E;
        margin-bottom: 1rem;
    }

        .mybtn > a {
            color: #F06D7E;
        } 
</style>
<h2 style="color: white;">Inicio de sesión</h2>

<div class="row">

    <div class="alert-danger">
        @ViewBag.Error
    </div>

    <form class="formLogin" action="@Url.Content("~/AccesoLogin/Login")" method="post">
        <div class="form-group">
            <label style="color: white;" class="label-default" for="email">Usuario</label>
            <input class="form-control" type="text" name="user" placeholder="Ingresa su Correo" />
        </div>
        <div class="form-group">
            <label style="color: white;" class="label-default" for="pass">Contraseña</label>
            <input class="form-control" type="password" name="pass" placeholder="Ingresa su contraseña" />
        </div>
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
        </div>
        <div class="form-group">
           
        </div>
    </form>

</div>